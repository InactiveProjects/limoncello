{
  "name": "neomerx/limoncello",
  "description": "JSON API support for Laravel and Lumen",
  "keywords": [
    "JSON API",
    "JSON",
    "API",
    "Laravel",
    "Lumen",
    "neomerx"
  ],
  "homepage": "https://github.com/neomerx/limoncello",
  "support": {
    "issues": "https://github.com/neomerx/limoncello/issues"
  },
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "neomerx",
      "email": "info@neomerx.com"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "neomerx/json-api": "^0.8.0",
    "illuminate/contracts": "~5.2.0",
    "illuminate/auth": "~5.2.0",
    "illuminate/config": "~5.2.0",
    "illuminate/container": "~5.2.0",
    "illuminate/http": "~5.2.0",
    "illuminate/pagination": "~5.2.0",
    "illuminate/routing": "~5.2.0",
    "illuminate/translation": "~5.2.0",
    "illuminate/validation": "~5.2.0",
    "illuminate/database": "~5.2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.6",
    "mockery/mockery": "^0.9.4",
    "scrutinizer/ocular": "^1.1",
    "squizlabs/php_codesniffer": "^2.0"
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Neomerx\\Limoncello\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Neomerx\\Tests\\Limoncello\\": "tests/"
    }
  },
  "scripts": {
    "test": "composer phpunit && composer phpcs",
    "phpcs": "./vendor/bin/phpcs -p -s --standard=PSR2 ./src ./tests",
    "phpunit": "phpunit",
    "hhvm": "hhvm ./vendor/phpunit/phpunit/phpunit"
  }
}
